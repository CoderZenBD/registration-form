@import url('https://fonts.googleapis.com/css2?family=Nosifer&family=Source+Sans+Pro:wght@200;300;400;600;700;900&display=swap');
*{
	margin: 0;
	padding: 0;
}
body{
	font-family: 'Source Sans Pro', sans-serif;
	font-size: 14px;
	line-height: 24px;
}
h1,h2,h3,h4,h5,h6{
	font-family:'Nosifer', cursive;
	margin-bottom: 30px;
}
a, a:hover{
	text-decoration:none;
}
.container{
	width: 1140px;
	margin: 0px auto;
}
.form-section{
	margin: 50px auto;
	width: 500px;
	padding: 30px;
	text-align:center;
	background: #ddd;
}
.avatar{
	width: 170px;
	height: 170px;
	border: 2px solid #000;
	border-radius: 100%;
	overflow: hidden;
	margin: 30px auto;
	transition: 1s;
}
.avatar img{
	width: 150px;
	height: 150px;
}
.avatar:hover{
	border: 2px solid tomato;
}
.form-group{line-height: 50px;width: 98%;display: block;}
.form-group label{
	display: block;
	font-weight: 600;
	font-size: 22px;
}
.form-control{
	
width: 100%;
	
border: 2px solid #000;
	
font-size: 22px;
	
background: transparent;
	
font-weight: 900;
}
select{
	width: 100%;
	border:2px solid #000;
	background: transparent;
	font-size: 22px;
	font-weight: 600;
}
textarea{
	Width:100%;
	height: 100px;
	resize:none;
	border:2px solid #000;
	background:transparent;
	margin-top:30px;
}
input[type=submit]{
	width: 100%;
	border:2px solid #000;
	background: transparent;
	font-size: 20px;
	font-weight: 600;
	font-family: 'Nosifer';
	transition: 1s;
}
input[type=submit]:hover{
	color:#fff;
	background:tomato;
}
.social-section{
	width: 700px;
	margin: 0px auto;
}
.social-group{
}
.social-group ul{
	
}
.social-group ul li{
	list-style: none;
	display: inline-block;
	margin-left: 30px;
	overflow:hidden;
	}
.social-group ul li a{
	font-size: 30px;
	text-align: center;
	display: block;
	width: 100px;
	height: 100px;
	line-height: 100px;
	background: aliceblue;
	border: 2px solid #000;
	border-radius: 100%;
	transition:1s;
}
.social-group ul li a:hover{
	color:#fff;
	background:tomato;
}